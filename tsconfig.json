{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "isolatedModules": true, // to avoid type name conflicts
    "sourceMap": false,
    "noImplicitAny": false,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules", "**/__tests__", "**/*.test.ts"]
}
